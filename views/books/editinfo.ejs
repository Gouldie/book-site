<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Book Information</h1>
        
        <div style="margin: 20px auto">
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="book[pages]" placeholder="number of pages" value="<%= book.pages %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[publisher]" placeholder="publisher" value="<%= book.publisher %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[ISBN]" placeholder="ISBN" value="<%= book.ISBN %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <p style="text-align: center"><a href="/books/<%= book._id %>">Back</a></p>
        </div>
    </div>
</div>


<% include ../partials/footer %>