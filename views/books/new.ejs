<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Book</h1>
        
        <div style="margin: 20px auto">
            <form action="/books" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="author" placeholder="author"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url"></input>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description" rows="10" cols="50" placeholder="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <p style="text-align: center"><a href="/books">Back</a></p>
        </div>
    </div>
</div>


<% include ../partials/footer %>