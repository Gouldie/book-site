<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment</h1>
        
        <div style="margin: 20px auto">
            <form action="/books/<%= book_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[title]" placeholder="title" value="<%= comment.title %>"></input>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" rows="10" cols="50" placeholder="your comment goes here"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <p style="text-align: center"><a href="/books/<%= book_id %>">Back</a></p>
        </div>
    </div>
</div>


<% include ../partials/footer %>