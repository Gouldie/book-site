<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment To <%= book.name %></h1>
        
        <div style="margin: 20px auto">
            <form action="/books/<%= book._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" rows="10" cols="50" placeholder="your comment goes here"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <p style="text-align: center"><a href="/books/<%= book._id %>">Back</a></p>
        </div>
    </div>
</div>


<% include ../partials/footer %>